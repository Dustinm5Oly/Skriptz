<div id="pageContent">
  <div class="stagnant-bg">
    <div class="bg">
      <logo id="pro-logo-right">
        <img src="/images/company-logo.png" alt="Skriptz logo">
      </logo>
    </div>
  </div>
  <div class="card">
    <div class="card-header h1 gold">
      Services Due: Next 7 Days!
    </div>
    {{#each subscriptionsDue as |subscription|}}
    <div class="card-body d-flex justify-content-around align-items-center">
      <div class="col-2">
        <ul class="list-group list-group-flush">
          <li class="list-group-item random my-2 h2 fw-bold gold">{{subscription.name}}</li>
          {{!-- <button type="button" class="btn btn-outline-danger">Paid</button> --}}
          {{!-- <button type="button" class="btn btn2 btn-outline-success">Paid</button> --}}
        </ul>
      </div>
      <div class="col-2">
        <ul class="list-group list-group-flush">
          <li class="list-group-item random fw-bold">Price</li>
          <li class="list-group-item random">${{subscription.price}}</li>
        </ul>
      </div>
      <div class="col-2">
        <ul class="list-group list-group-flush">
          <li class="list-group-item fw-bold">Due Day</li>
          <li class="list-group-item">{{addSuffix subscription.due_day}}</li>
        </ul>
      </div>
    </div>
    <hr/>
    {{/each}}
